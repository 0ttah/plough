{
  "name": "@open-artifact/plough",
  "version": "0.2.0",
  "main": "lib/cli.js",
  "scripts": {
    "version": "npm run build && git add -A lib -f",
    "postversion": "git push && git push --tags",
    "build": "tsc",
    "start": "node ./lib/cli.js"
  },
  "bin": {
    "plough": "./lib/cli.js"
  },
  "keywords": [
    "Artifact",
    "API",
    "Card game",
    "Valve",
    "JSON",
    "Images"
  ],
  "author": "Theo Ottah",
  "license": "ISC",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/open-artifact/plough.git"
  },
  "bugs": {
    "url": "https://github.com/open-artifact/plough/issues"
  },
  "homepage": "https://github.com/open-artifact/plough#readme",
