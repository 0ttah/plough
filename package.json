  "devDependencies": {
    "@types/node": "^10.12.9",
    "@types/node-emoji": "^1.8.0",
    "@types/shelljs": "^0.8.0",
    "@types/yargs": "^12.0.1",
    "typescript": "^3.1.6"
  },
  "dependencies": {
    "@open-artifact/api-types": "^0.4.0",
